<h1><small>Author Username:</small> <%= @author.name %></h1>

<ol>
	<% @top_contributions.each do |contribution| %>
		<li><h3><small>Page:</small> <%= contribution[0] %> <small>Number:</small> <%= contribution[1] %></h3></li>
	<%end %>
</ol>
<canvas id="authorContributionsChart" width="400" height="400"></canvas>

<h2>Last revision made <%= distance_of_time_in_words(@author.most_recent_revision.timestamp, Time.now) %> ago:</h2>
<p><%= @author.most_recent_revision.content %> </p>


