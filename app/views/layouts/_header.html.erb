<div class="row">
  <div class="col-md-7 navsearch">
      <%= form_tag("/pages", method: "post", class: "form") do %>
      <div class="form-group col-md-10">
          <%= text_field_tag(:query, "", class: "form-control navsearchbar", placeholder: "Search Wikipedia...") %>
      </div>
      <div class="form-group col-md-1 navbutton">
      <button type="submit" class="btn btn-primary"> <i class="fa fa-search fa-2x"></i></button>
      </div>
      <% end %>
  </div>
  <button type="button" class="col-md-1 link_text btn btn-primary btn-trans">
      <%= link_to "Random!", random_path, class: " search-loader" %>
    </button> 
  <div class="toggle-navigation toggle-right col-md-1" id="circle-around-twitter-bird">
    <a href="javascript:void(0)" class="btn btn-default" id="toggle-right">
        <i class="fa fa-twitter" id="twitter-bird"></i>
    </a>
  </div>
  </div>
