<br>
<div class="main-content-wrapper">
  <div class="row">
    <div class="col-md-8">
      <div><h1 id="page_title"><%= @page.title %></h1></div>
      <hr>
      <div id="extract">
        <div class="col-md-offset-4">
          <%= image_tag("extract-spinner.gif") %>
        </div>
      </div>        
      <div> <i><small> <%= link_to("View on Wikipedia Â»", @page.wiki_link, target: "_blank") %></small></i></div>
    </div>
    <div class="col-md-4">
      <img class="pull-right" src="<%= @page.get_photo(@page.title) %>" height="200">
    </div>
  </div>
<br><br><br>
    
  <div class="row"> 
    <div class="col-md-3 col-sm-6">
      <div class="dashboard-tile detail tile-red">
        <div class="content">
          <h3>This page changes every <b><%=@page.time_between_revisions%></b></h3>
        </div>
      </div>
    </div>

    <div class="col-md-3 col-sm-6">
      <div class="dashboard-tile detail tile-turquoise">
        <div class="content">
        <% if @page.get_number_of_anonymous_authors > 1 %>
        <h3>There are <b class="timer" data-from="0" data-to="<%= @page.get_number_of_anonymous_authors %>" data-speed="2500"></b> anonymous authors from <b class="timer" data-from="0" data-to="<%= @page.find_country_name.count %>" data-speed="2500"></b> countries contributing.</h3>
        <% else %>
        <h3>This page has no edits from anonymous authors.</h3>
        <% end %>
        </div>
      </div>
    </div>

    <div class="col-md-3 col-sm-6">
      <div class="dashboard-tile detail tile-blue">
        <div class="content">
          <h3><b class="timer" data-from="0" data-to="<%=@page.author_count%>" data-speed="2500"></b> authors have edited this page</h3>
        </div>
      </div>
    </div>

    <div class="col-md-3 col-sm-6">
      <div class="dashboard-tile detail tile-purple">
        <div class="content">
          <h3>Based on the rate of edits, this page is <b><%=@page.edit_activity_amount%></b></h3>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-9">
      <h2>Anonymous authors by location:</h2>
      <div id="map" style="width: 600px; height: 400px"></div>
    </div>
      <div class="col-md-3">
        <div class="panel-heading">
          <div class="panel-title">
            <h2>Count:</h2>
          </div>
        </div>
        <div class="">
          <span class="arrow"></span>
          <p>
            <% @page.anonymous_location_for_view.each do |revision| %>
              <p><%= revision[0] %> : <b><%= revision[1] %></b></p>
            <% end %>
          </p>
        </div>
      </div>
  </div>

      <h3>Top 5 Page Contributors</h3>

  <div class="row">
    <div class="col-md-6">
      <ol>
        <% @page.top_five_authors.each do |top_five_author| %>
          <li><h3> <%= link_to "#{top_five_author[:author].name}",  
              author_path(top_five_author[:author].id) %><br> 
              <small><b><%= top_five_author[:count] %></b> contributions</small></h3>  
          </li>
        <% end %>
      </ol>
    </div>

    <div class="col-md-6">
      <h3><%= link_to "#{@page.top_five_authors.first[:author].name}",author_path(@page.top_five_authors.first[:author].id) %> also contributes to: </h3>
      <% @page.top_five_authors.first[:author].top_contributions.each do |contribution| %>
      <p><b><%= contribution[0]%></b><br> <small><%= contribution[1] %> contributions</small></p>
      <% end %>
    </div>
  </div>

    <br>
    <% if @page.most_recent_vandalism %>
      <h2>Most Recent Vandalism:</h2>
      <%= render partial: 'revisions/revision', locals: { revision: @page.most_recent_vandalism } %>
    <% else %>
    <%end %>

    <h1>Revisions per day</h1>
  <div class="row">
   <div class="text-center">
      <div class="chart">
          <div id="zoom"></div>
      </div>
    </div>
  </div>


  <h1><div class="text-center">Timeline of revisions</div></h1>
  <%= render partial: 'layouts/timeline', locals: { top_revisions: @page.top_revisions } %>


  <script type="text/javascript">
    $('.timer').countTo();
  </script>

  <%= javascript_include_tag 'd3.v3.min.js' %>
  <%= javascript_include_tag 'c3.js' %>
  <%= javascript_include_tag 'c3-demo.js' %>

