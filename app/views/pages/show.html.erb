<div class="row">
<div class="col-md-6">
  <h1><%= @page.title %></h1>
</div>
<div class="dashboard-tile detail tile-red col-md-6">
    <div class="content">
      <h4>This page changes every <b><%=@page.days_between_revisions%></b> days</h4>
    </div>
    <div class="icon"><i id="icon" class="fa fa-bar-chart-o"></i>
  </div>
</div>

<h3>Top 5 Page Contributors</h3>
<ol>
  <% @top_five_authors.each do |top_five_author| %>
    <li><h3> <%= link_to "#{top_five_author[:author].name}",  
        author_path(top_five_author[:author].id) %><br> 
        <small># of contributions: <%= top_five_author[:count] %></small></h3>  
    </li>
  <% end %>
</ol>

  <h3>Top Author contributions</h3>
  
  <%= @top_five_authors.first[:author].top_contributions %>
    
    

  <h2>Latest Revision:</h2>
  <p>Made on: <%= @page.get_date %></p>
  <p><%= render partial: 'page_revision', locals: {revisions: @revisions} %></p>

<h2>Number of anonymous authors: <%= @page.get_number_of_anonymous_authors %></h2>

<h2>Locations of anonymous authors:
  <% @page.find_country_name.each do |name|%>
      <%= name %>
    <% end %>
</h2>
